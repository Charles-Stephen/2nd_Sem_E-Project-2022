@model Printing_Photo_Online.user

@{
    ViewBag.Title = "DeleteConfirmed";
    Layout = "~/Views/Shared/Frontend_Layout.cshtml";
}

<section id="home">
    <div class="container">
        <div class="container">
            <h2>Delete Confirmed</h2>

            <div>
                <h4>user Profile</h4>
                <hr />

                @if (@ViewBag.yourtype <= 0)
                {

                    <dl class="dl-horizontal hidden">
                        <dt>
                            First Name
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.First_Name)
                        </dd>

                        <dt>
                            Last Name
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Last_Name)
                        </dd>

                        <dt>
                            Email
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Email)
                        </dd>

                        <dt>
                            Password
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Pass)
                        </dd>

                        <dt>
                            User Type
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.User_Type)
                        </dd>

                        <dt>
                            User Profile
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.User_Profile)
                        </dd>

                        <dt>
                            Date Of Birth
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Date_Of_Birth)
                        </dd>

                        <dt>
                            Gender
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Gender)
                        </dd>

                        <dt>
                            Phone
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Phone)
                        </dd>

                        <dt>
                            Order Number
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Order_id)
                        </dd>

                    </dl>
                }
                else if (@ViewBag.yourtype >= 1)
                {
                    <h1 class="text-center container">Do You Want To Delete This Account?</h1>
                }


                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-default" />

                        @if (@ViewBag.yourtype <= 0)
                        {
                            <a href="~/Account/Index">
                                <input type="button" value="Cancel" class="btn btn-outline-dark" />
                            </a>
                        }
                        else if (@ViewBag.yourtype >= 1)
                        {
                            <a href="~/Home/Index">
                                <input type="button" value="Cancel" class="btn btn-outline-dark" />
                            </a>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</section>