@model Printing_Photo_Online.category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/Backend_Layout.cshtml";
}

<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h2 class="mt-4">Delete</h2>

            <h4>Are you sure you want to delete this?</h4>
            <div>
                <h4 class="ms-4 mt-2">Category</h4>
                <hr />
                <dl class="dl-horizontal">
                    <dt class="mb-3">
                        Category Name
                    </dt>

                    <dd class="mb-3">
                        @Html.DisplayFor(model => model.Category_Name)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-outline-dark" />

                        <a href="~/categories/Index">
                            <input type="button" value="Cancel" class="btn btn-outline-dark" />
                        </a>
                    </div>
                }
            </div>
        </div>
    </main>
