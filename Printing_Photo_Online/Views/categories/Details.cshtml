@model Printing_Photo_Online.category

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/Backend_Layout.cshtml";
}


<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h2 class="mt-4">Details</h2>

            <div>
                
                <h4 class="ms-4 mt-2">Category</h4>
                <hr />
                <dl class="dl-horizontal">
                    <dt class="mb-3">
                        Category Name
                    </dt>

                    <dd class="mb-3">
                        @Html.DisplayFor(model => model.Category_Name)
                    </dd>

                </dl>
            </div>

            <div class="mb-5">
                <a href="@Url.Action("Edit", new { id = Model.id })">
                    <input type="button" value="Edit" class="btn btn-outline-dark" />
                </a>

                <a href="~/categories/Index">
                    <input type="button" value="All Categories" class="btn btn-outline-dark" />
                </a>
            </div>
            
        </div>
    </main>